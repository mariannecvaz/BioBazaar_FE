<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    //Tab

    <TextView
        android:id="@+id/bar"
        android:layout_width="412dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="0dp"
        android:foreground="@color/light" />

    <TextView
        android:id="@+id/username"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="598dp"
        android:fontFamily="@font/rubik_medium"
        android:text="USERNAME"
        android:textColor="@color/green"
        android:textSize="18sp"
        android:textStyle="bold" />

    //Voltar para trÃ¡s

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:background="@color/light"
        app:srcCompat="@drawable/ic_seta" />

    <Button
        android:id="@+id/bntOrders"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_below="@+id/bar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="1dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/rubik_light"
        android:text="@string/points"
        android:textAlignment="textStart"
        android:clickable="false"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="23dp"
        android:layout_height="29dp"
        android:layout_below="@+id/bar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="28dp"
        android:elevation="@dimen/cardview_default_elevation"
        app:srcCompat="@drawable/ic_coins" />

    <TextView
        android:id="@+id/txtCoins"
        android:layout_width="198dp"
        android:layout_height="41dp"
        android:layout_below="@+id/bntOrders"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="106dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="107dp"
        android:fontFamily="@font/rubik_light"
        android:gravity="center"
        android:text="@string/points"
        android:textColor="@color/black" />

    <ImageButton
        android:id="@+id/infoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="90dp"
        android:background="@color/white"
        app:srcCompat="@drawable/ic_info" />


</RelativeLayout>