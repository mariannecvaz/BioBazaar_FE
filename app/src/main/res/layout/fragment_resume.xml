<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    //Scroll da página

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frameLayoutFavorite"
                android:layout_width="1000dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="147dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frameLayoutFavorite"
                android:layout_alignParentStart="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/rubik_medium"
                android:text="@string/bill"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_alignParentStart="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/rubik_light"
                android:text="nomeeeeee"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_alignParentStart="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/rubik_light"
                android:text="País"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/country"
                android:layout_alignParentStart="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/rubik_light"
                android:text="Morada"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/zipCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adress"
                android:layout_alignParentStart="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/rubik_light"
                android:text="Codigo postal"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/nif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/zipCode"
                android:layout_alignParentStart="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/rubik_light"
                android:text="NIF"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nif"
                android:layout_alignParentStart="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/rubik_light"
                android:text="Telemóvel"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone"
                android:layout_alignParentStart="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/rubik_light"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/payment"
                android:layout_width="1000dp"
                android:layout_height="50dp"
                android:layout_below="@+id/email"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/square"
                android:paddingLeft="36dp"
                android:paddingTop="13dp"
                android:text="METODO DE PAGAMENTO"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/ctt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/payment"
                android:layout_alignParentStart="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/rubik_light"
                android:text="@string/ctt"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cttPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/payment"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/rubik_light"
                android:text=""
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/promotionTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ctt"
                android:layout_alignParentStart="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/rubik_light"
                android:text="@string/promotion"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/promotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cttPrice"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/rubik_light"
                android:text=""
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/totalTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/promotionTxt"
                android:layout_alignParentStart="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/rubik_medium"
                android:text="@string/total"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/promotion"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/rubik_medium"
                android:text=""
                android:textColor="@color/black"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/totalP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/total"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/rubik_medium"
                android:text=""
                android:textColor="@color/black"
                android:textSize="19dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnFinish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkBox"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="115dp"
                android:layout_marginTop="39dp"
                android:layout_marginEnd="114dp"
                android:fontFamily="@font/rubik_light"
                android:text="@string/finish"
                android:textColor="@color/black" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/totalTxt"
                android:layout_alignParentStart="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="48dp"
                android:text="@string/pointsQuestion" />

        </RelativeLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="412dp"
        android:layout_height="60dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="0dp"
        android:background="@color/white" />

    //Back button

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="99dp"
        android:background="@color/white"
        app:srcCompat="@drawable/ic_seta" />

    //Page lable

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="26dp"
        android:fontFamily="@font/rubik_light"
        android:text="@string/pay"
        android:textAllCaps="true"
        android:textColor="@color/green"
        android:textSize="18sp" />

</RelativeLayout>

