<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/catalogFull"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Filters.CatalogFragment">

    //Scroll da p√°gina

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frameLayoutCatalog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp">

            </FrameLayout>


        </RelativeLayout>
    </ScrollView>

    <TextView
        android:id="@+id/background"
        android:layout_width="415dp"
        android:layout_height="108dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="68dp"
        android:foreground="@color/white" />

    //Back button

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/background"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="31dp"
        android:background="@color/white"
        app:srcCompat="@drawable/ic_seta" />

    //Page lable

    <TextView
        android:id="@+id/categoryTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/background"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="55dp"
        android:fontFamily="@font/rubik_light"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/novidades"
        android:layout_width="296dp"
        android:layout_height="36dp"
        android:layout_below="@+id/categoryTxt"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="0dp"
        android:alpha="0.5"
        android:foreground="@color/light" />

    <TextView
        android:id="@+id/subcategoryTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/novidades"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="55dp"
        android:fontFamily="@font/rubik_light"
        android:textColor="@color/green"
        android:textSize="18sp" />
</RelativeLayout>